<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="120dp"
        tools:src="@drawable/royal_marble"
        android:scaleType="fitXY"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="40"
            tools:text="Royal Marble Hotel Royal Marble Hotel "
            android:textColor="#2B3D4D"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="top"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            tools:text="G.R.A, 22 Ihama Rd, Oka, Benin City  Ihama Rd, Oka, Benin City"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#394450"
            android:gravity="bottom"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:gravity="bottom">

            <ImageView
                android:id="@+id/call_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_call_black_18"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="052 941 461"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#394450"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>